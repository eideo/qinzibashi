@model PBS.Model.pbs_basic_ReviewHistory
@{
    ViewBag.Title = ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Home.cshtml";
}

<!--top-Header-menu-->
@RenderPage("~/Views/Shared/_Header.cshtml")
<!--close-top-Header-menu-->
<!--main-container-part-->
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="javascript:void(0)"><i class="icon-home"></i> @ViewBag.PageTitle</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid normal-size" style="margin: 0px">
            <div class="widget-box">
                <div class="widget-content tab-content">
                    <div class="widget-box">
                        <div class="widget-content nopadding">
                            <form action="#" method="get" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">往期回顾标题：</label>
                                    <div class="controls">
                                        <input id="ReviewTitle" type="text" class="span11" placeholder="往期回顾标题" value="@Model.ReviewTitle">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">上传图片 :</label>
                                    <div class="controls">
                                        <input id="uploadImage" type="file" name="ReviewUrl" onchange="loadImageFile();" />
                                        <button id="uploadBtn" class="btn btn-primary">上传</button>
                                        <input id="hidUploadImgUrl" type="hidden" value="@Model.ReviewUrl" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">图片 :</label>
                                    <div class="controls">
                                        <img id="uploadPreview" src="../../img/220x220.png" width="220" height="220" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">往期回顾内容 :</label>
                                    <div class="controls">
                                        <div id="js_editor" class="edui_editor_wrp edui-default" style="width: 100%; height: 300px;">
                                            <script id="editor" type="text/javascript"></script>
                                            <input id="SourceContent" type="hidden" value="@Model.ReviewContent" />
                                            <input id="SourceContent1" type="hidden" name="SourceContent" value="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions text-center">
                                    <button id="saveBtn" type="button" class="btn btn-success">保存</button>
                                    <a class="btn" href="/Content/ReviewList">返回</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    UM.getEditor('editor');
</script>
<script type="text/javascript">
    var reviewId = "@Model.ReviewId";
    var createTime = "@Model.CreateTime";
    var updateTime = "@Model.UpdateTime";
    var creatorId = "@Model.CreatorId";
    var remark = "@Model.Remark";
    var reviewTitle = $("#ReviewTitle").val();
    var reviewContent = $("#SourceContent1").val();
    var reviewUrl = $("#hidUploadImgUrl").val();
</script>
<script src="~/js/Content/ReviewAdd.js"></script>
<!--end-main-container-part-->

