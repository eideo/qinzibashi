@using PBS.Model;
@model PBS.Model.pbs_basic_GoodsPackage
@{
    ViewBag.Title = ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Home.cshtml";

    List<pbs_basic_GoodsType> goodsTypelist = new List<pbs_basic_GoodsType>();
    goodsTypelist = (List<pbs_basic_GoodsType>)ViewData["GoodsTypeList"];
}

<!--top-Header-menu-->
@RenderPage("~/Views/Shared/_Header.cshtml")
<!--close-top-Header-menu-->
<!--main-container-part-->
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="javascript:void(0)"><i class="icon-home"></i> @ViewBag.PageTitle</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid normal-size" style="margin: 0px">
            <div class="widget-box">
                <div class="widget-content tab-content">
                    <div class="widget-box">
                        <div class="widget-content nopadding">
                            <form action="#" method="get" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">套餐名称：</label>
                                    <div class="controls">
                                        <input id="GoodsPackageName" type="text" class="span11" placeholder="套餐名称" value="@Model.GoodsPackageName">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">套餐价格：</label>
                                    <div class="controls">
                                        <input id="GoodsPackagePrice" type="text" class="span11" placeholder="套餐价格" value="@Model.GoodsPackagePrice">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">活动类型：</label>
                                    <div class="controls">
                                        <select id="GoodsTypeId">
                                            <option value="0" title="0">请选择商品类型</option>
                                            @if (goodsTypelist != null && goodsTypelist.Count > 0)
                                            {
                                                foreach (var item in goodsTypelist)
                                                {
                                                    <option value="@item.GoodsTypeId" title="@item.GoodsTypeId">@item.GoodsTypeName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-actions text-center">
                                    <button id="saveBtn" type="button" class="btn btn-success">保存</button>
                                    <a class="btn" href="/Activity/ActivityPackageList">返回</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    var goodsPackageId = "@Model.GoodsPackageId";
    var goodsTypeName = "@Model.GoodsPackageName";
    var goodsPackagePrice = "@Model.GoodsPackagePrice";
    var goodsTypeId = "@Model.GoodsTypeId";
    var createTime = "@Model.CreateTime";
    var updateTime = "@Model.UpdateTime";
    var creatorId = "@Model.CreatorId";
    var remark = "@Model.Remark";
</script>
<script src="~/js/Activity/ActivityPackageAdd.js"></script>
<!--end-main-container-part-->

