@using PBS.Model;
@{
    ViewBag.Title = "分享收益部分统计表";
    Layout = "~/Views/Shared/_Home.cshtml";
    List<pbs_basic_ShareDetail> list = (List<pbs_basic_ShareDetail>)ViewData["List"];
}

<!--top-Header-menu-->
@RenderPage("~/Views/Shared/_Header.cshtml")
<!--close-top-Header-menu-->
<!--main-container-part-->
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="javascript:void(0)"><i class="icon-home"></i>分享收益部分统计表</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid normal-size" style="margin: 0px">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>分享收益部分统计表</h5>
                </div>
                <div class="widget-content nopadding">
                    <table id="example" class="table table-bordered data-table">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>会员名称</th>
                                <th>会员编号</th>
                                <th>分享次数</th>
                                <th>分享收益总额</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (list != null && list.Count > 0)
                            {
                                foreach (var item in list)
                                {
                                    <tr>
                                        <td><a href="/Member/MemberShareProfitList?userId=@item.UserId">@item.Id</a></td>
                                        <td><a href="/Member/MemberShareProfitList?userId=@item.UserId">@item.NickName</a></td>
                                        <td><a href="/Member/MemberShareProfitList?userId=@item.UserId">@item.UserId</a></td>
                                        <td>@item.ShareCount</td>
                                        <td>@item.Profit</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<!--end-main-container-part-->
