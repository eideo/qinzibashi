@using PBS.Model;
@{
    ViewBag.Title = "会员分享收益清单";
    Layout = "~/Views/Shared/_Home.cshtml";
    List<pbs_basic_MyShareProfit> myShareProfitlist = (List<pbs_basic_MyShareProfit>)ViewData["pbs_basic_MyShareProfitList"];
}

<!--top-Header-menu-->
@RenderPage("~/Views/Shared/_Header.cshtml")
<!--close-top-Header-menu-->
<!--main-container-part-->
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="javascript:void(0)"><i class="icon-home"></i>会员分享收益清单</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid normal-size" style="margin: 0px">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>会员分享收益清单</h5>
                </div>
                <div class="widget-content nopadding">
                    <table id="example" class="table table-bordered data-table">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>分享订单号</th>
                                <th>分享级别</th>
                                <th>收益金额</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (myShareProfitlist != null && myShareProfitlist.Count > 0)
                            {
                                foreach (var item in myShareProfitlist)
                                {
                                    <tr>
                                        <td>@item.ShareId</td>
                                        <td>@item.FromShareOrderId</td>
                                        <td>@item.ShareLevel</td>
                                        <td>@item.Profit</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="form-actions text-center" style="background:none;border:0">
                        <a class="btn" href="/Member/MemberShareProfitDetailList">返回</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!--end-main-container-part-->